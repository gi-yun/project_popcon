<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.store.mapper.FaqMapper">
  	<resultMap id="S2C" type="FaqDTO">
  		<id 	property="faqIdx" column="faq_idx "/>
  		<result property="faqQ"   column="faq_q"/>
  		<result property="faqA"   column="faq_a"/>
  	</resultMap>
  	
  	<select id="findAllFaq" resultMap="S2C">
  	
	  		select faq_q, 
	  			   faq_a 
	  		  from faq
  	</select>
  	<select id="selectFaq" resultType="FaqDTO">
  		  	select faq_q, 
	  			   faq_a 
	  		  from faq
	  		 where faq_idx=#{faq_idx}
  	</select>
  	
	<select id="selectMyQna" resultType="QnaDTO">
 			select qna_title,
 				   qna_text
 			  from CUSTOMER_QNA
  	</select>
  	<insert id="postMyQna" parameterType="QnaDTO">
  		
	  insert into CUSTOMER_QNA(
	  			  qna_title, 
	  			  qna_text)
	  	   values (
	  	          {#qna_title},
	  	          {#qna_text})				
  	</insert>
  	<update id="editMyQna" parameterType="QnaDTO">
  	
  	       update CUSTOMER_QNA(
  	 		  set qna_title = #{qna_title},
  	 			  qna_text = #{qna_text})
  	 	    where qna_idx = #{qna_idx}
  	</update>
  	<delete id="deleteMyQna" parameterType="long">
  	
  	 delete from CUSTOMER_QNA
  	       
  	</delete>
  </mapper>